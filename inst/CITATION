         note         = "doi: 10.1111/bre.12245",

         textVersion  =
           paste("Tom Andersen, Magnus Kristoffersen & Marlina Elburg (in press).",
                 "Visualizing, interpreting and comparing detrital zircon age and Hf isotope data in basin analysis - a graphical approach.",
                 "Basin Research.",
                 "doi: 10.1111/bre.12245.",
                 "R package version 0.1.3.",
                 "https://github.com/magnuskristoffersen/detzrcr.")
)
